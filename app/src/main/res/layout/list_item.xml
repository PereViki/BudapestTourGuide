<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    style="@style/RootStyle">

    <ImageView
        android:id="@+id/image"
        style="@style/ImageStyle"
        tools:src="@drawable/museum_01" />

    <LinearLayout style="@style/DetailsStyle">

        <TextView
            android:id="@+id/location_name_text_view"
            style="@style/LocationName"
            tools:text="Hungarian National Museum" />

        <TextView
            android:id="@+id/location_description_text_view"
            style="@style/LocationDetails"
            tools:text="The Hungarian National Museum collects, preserves and presents the historical relics of the Carpathian Basin and Hungary since 1802." />

        <TextView
            android:id="@+id/opening_hours_text_view"
            style="@style/LocationDetails"
            tools:text="10:00 - 18:00 closed on mondays"
            android:drawableLeft="@drawable/ic_hours"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/address_text_view"
            style="@style/LocationDetails"
            tools:text="MÃºzeum krt. 14-16, Budapest 1088"
            android:drawableLeft="@drawable/ic_place"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/phone_text_view"
            style="@style/LocationDetails"
            tools:text="+36 (1) 338 2122"
            android:drawableLeft="@drawable/ic_phone"
            android:gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>